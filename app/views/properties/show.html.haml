.page-header
  = link_to properties_path, :class => 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Back
  = link_to edit_property_path(@property), :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    Edit
  %h1 Show property

%dl.dl-horizontal
  %dt Name:
  %dd= @property.name
  %dt Address1:
  %dd= @property.address1
  %dt Address2:
  %dd= @property.address2
  %dt City:
  %dd= @property.city
  %dt State:
  %dd= @property.state
  %dt Zip:
  %dd= @property.zip
